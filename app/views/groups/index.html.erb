<div class="col-md-12">
  <h1> 话题列表 </h1>
 <div class="group">
   <%= link_to "New Group", new_group_path, class: "btn btn-primary pull-right" %>
 </div>

   <table class="table table-hover">
      <thead>
        <tr>
          <th> Title </th>
          <th> Description </th>
          <th> User </th>
          <th> Update Time </th>
        </tr>
      </thead>
      <tbody>
         <% @groups.each do |group| %>
         <tr>
           <td><%= link_to group.title, group_path(group) %></td>
           <td><%= group.description %></td>
           <td> # </td>
           <td>
               <%= link_to "Edit", edit_group_path(group), class: "btn btn-info btn-sm" %> |
               <%= link_to "Delet", group_path(group), class: "btn btn-warning btn-sm", method: :delete, data: {confirm: "are you sure?"}%>
           </td>
         </tr>
         <% end %>
      </tbody>

   </table>

</div>
