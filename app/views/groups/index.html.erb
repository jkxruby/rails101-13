<div class="col-md-12">
  <h1> 话题列表 </h1>
 <div class="group">
   <%= link_to "新建话题", new_group_path, class: "btn btn-primary pull-right" %>
 </div>

   <table class="table table-hover">
      <thead>
        <tr>
          <th> Title </th>
          <th> Description </th>
          <th> User </th>
          <th> Function </th>
        </tr>
      </thead>
      <tbody>
         <% @groups.each do |group| %>
         <tr>
           <td><%= link_to group.title, group_path(group) %></td>
           <td><%= group.description %></td>
           <td><%= current_user.email %></td>
           <td>
               <% if current_user && current_user == group.user %>
                 <%= link_to "Edit", edit_group_path(group), class: "btn btn-info btn-sm" %> |
                 <%= link_to "Delet", group_path(group), class: "btn btn-warning btn-sm", method: :delete, data: {confirm: "are you sure?"}%>
               <% else %>
                 NONE
               <% end %>
           </td>
         </tr>
         <% end %>
      </tbody>

   </table>

</div>
