<div class="col-md-12">
  <div class="group">
     <%= link_to "New Post", new_group_post_path(@group), class: "btn btn-primary pull-right" %>
  </div>

  <tr>
    <td> <%= @group.title %> </td>
    <br>
    <td><%= @group.description %></td>
  </tr>

   <table class="table table-hover">
      <thead>
         <tr>
           <th> Content </th>
           <th> User </th>
           <th> Update-Time </th>
         </tr>
      </thead>

         <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td><%= post.content %></td>
              <td><%= post.user.email %></td>
              <td><%= post.updated_at %></td>
            </tr>
            <% end %>
         </tbody>
   </table>

</div>
